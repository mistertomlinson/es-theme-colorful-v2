<?xml version="1.0" encoding="UTF-8"?>
<!--
# "Colorful 2.0"
Original theme: Viking
This theme: Devonodev

Well, basically I just copied the Bigbox theme we have now. 
Then, I added some fins to lower wind resistance. 
And this racing stripe here I feel is pretty sharp.

Uses assets from the COLORFUL Bigbox Theme, repurposed for the RG351V, running 351elec.
Tested on nothing else.
-->

<theme>
  <formatVersion>7</formatVersion>
  <include>./../inc/globalsGL.xml</include>
  <include>./../inc/consoles/${system.theme}.xml</include>

  <subset name="compatibility" displayName="OS Compatibility">
    <include name="arkos" displayName="ArkOS">./../inc/helpbar/arkoshelpext.xml</include>
    <include name="pan4elec" displayName="Pan4ELEC">./../inc/helpbar/pan4elechelpIV.xml</include>
  </subset>

<subset name="help_ui" displayName="Help UI">
  <!-- Bubble overlay options -->
  <include name="bubble_on_unswapped" displayName="Bubble: 'All Games' On + A/B Unswapped"/>
  <include name="bubble_on_swapped" displayName="Bubble: 'All Games' On + A/B Swapped"/>
  <include name="bubble_off_unswapped" displayName="Bubble: 'All Games' Off + A/B Unswapped"/>
  <include name="bubble_off_swapped" displayName="Bubble: 'All Games' Off + A/B Swapped"/>

  <include name="strip_small" displayName="Strip: Small Font"/>
  <include name="strip_medium" displayName="Strip: Medium Font"/>
  <include name="strip_large" displayName="Strip: Large Font"/>

  <include name="no_strip_small" displayName="No Overlay: Small Font"/>
  <include name="no_strip_medium" displayName="No Overlay: Medium Font"/>
  <include name="no_strip_large" displayName="No Overlay: Large Font"/>
</subset>


  <subset name="game count" displayName="Game Count">
    <include name="top left" displayName="Top Left">./../inc/gamecount/tl.xml</include>
    <include name="bottom right" displayName="Bottom Right">./../inc/gamecount/br.xml</include>
    <include name="below logo" displayName="Below Logo">./../inc/gamecount/bl.xml</include>
    <include name="off" displayName="Off">./../inc/gamecount/off.xml</include>
  </subset>

  <subset name="rounded screen corners" displayName="Rounded Screen Corners">
    <include name="on" displayName="On">./../inc/corn.xml</include>
    <include name="off" displayName="Off"/>
  </subset>

  <subset name="device" displayName="Tools Screen">
    <include name="r36s" displayName="R36S"/>
    <include name="g350" displayName="G350"/>
    <include name="r36h" displayName="R36H"/>
    <include name="r36xx" displayName="R36XX"/>
    <include name="r36splus" displayName="R36S Plus"/>
  </subset>

  <subset name="gamelist ui" displayName="Gamelist UI">
    <include name="standard" displayName="Standard"/>
    <include name="glass" displayName="Glass"/>
  </subset>

  <subset name="colorset" displayName="Color Scheme">
    <include name="blue" displayName="Blue">./../inc/colorset/blue.xml</include>
    <include name="red" displayName="Red">./../inc/colorset/red.xml</include>
    <include name="green" displayName="Green">./../inc/colorset/green.xml</include>
    <include name="yellow" displayName="Yellow">./../inc/colorset/yellow.xml</include>
    <include name="orange" displayName="Orange">./../inc/colorset/orange.xml</include>
    <include name="teal" displayName="Teal">./../inc/colorset/teal.xml</include>
    <include name="pink" displayName="Pink">./../inc/colorset/pink.xml</include>
    <include name="purple" displayName="Purple">./../inc/colorset/purple.xml</include>
    <include name="gray" displayName="Gray">./inc/colorset/gray.xml</include>
  </subset>

  <subset name="systemvideos" displayName="System Videos">
    <include name="on" displayName="Enabled">./../inc/systemvideosIV.xml</include>
    <include name="off" displayName="Disabled"/>
  </subset>

  <subset name="iconset" displayName="Icons">
    <include name="standard" displayName="Standard"/>
    <include name="arcade" displayName="Arcade">./../inc/iconset/arcade.xml</include>
    <include name="snes" displayName="SNES">./../inc/iconset/snes.xml</include>
    <include name="snesalt" displayName="SNES (ALT)">./../inc/iconset/snesalt.xml</include>
    <include name="psx" displayName="PlayStation (PS1)">./../inc/iconset/psx.xml</include>
    <include name="xbox" displayName="Xbox">./../inc/iconset/xbox.xml</include>
    <include name="xboxone" displayName="Xbox One">./../inc/iconset/xboxone.xml</include>
  </subset>

  <view name="screen">
    <text name="clock">
      <size>0.2 0.2</size>
      <origin>0.5 0.5</origin>
      <pos>0.75 0.035</pos>
      <padding>0 0 0 0</padding>
      <alignment>center</alignment>
      <verticalAlignment>center</verticalAlignment>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.034</fontSize>
      <color>${colorWhite}</color>
    </text>
    <batteryIndicator name="batteryIndicator">
      <size>0.06 0.06</size>
      <origin>0 0</origin>
      <pos>0.93 0.0055</pos>
      <horizontalAlignment>right</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <itemSpacing>0.010</itemSpacing>
      <full>./../assets/icons/screen/battery-full.svg</full>
      <at75>./../assets/icons/screen/battery-75.svg</at75>
      <at50>./../assets/icons/screen/battery-50.svg</at50>
      <at25>./../assets/icons/screen/battery-25.svg</at25>
      <empty>./../assets/icons/screen/battery-empty.svg</empty>
      <incharge>./../assets/icons/screen/battery-incharge.svg</incharge>
      <networkIcon>./../assets/icons/screen/network.svg</networkIcon>
      <color>${colorWhite}</color>
    </batteryIndicator>
    <controllerActivity name="controllerActivity">
      <size>0.175 0.045</size>
      <pos>0.78 0.015</pos>
      <horizontalAlignment>left</horizontalAlignment>
      <itemSpacing>0.010</itemSpacing>
      <imagePath>./../assets/icons/screen/gamepad.svg</imagePath>
      <color>${colorGray}</color>
      <activityColor>${colorWhite}</activityColor>
      <hotkeyColor>${colorBaseNeutral}</hotkeyColor>
    </controllerActivity>
  </view>

  <view name="menu">
    <menuBackground name="menubg">
      <path>./../assets/images/menu_bg.png</path>
    </menuBackground>

    <menuText name="menutitle">
      <fontPath>./../assets/fonts/Roboto-Black.ttf</fontPath>
      <fontSize>0.045</fontSize>
      <color>${colorWhite}</color>
    </menuText>

    <menuText name="menutext">
      <fontPath>./../assets/fonts/Roboto-Regular.ttf</fontPath>
      <fontSize>0.035</fontSize>
      <color>${colorGrayMidLight}</color>
      <separatorColor>ffffff00</separatorColor>
      <selectorColor>${colorBaseDark}</selectorColor>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <fontPath>./../assets/fonts/Roboto-Medium.ttf</fontPath>
      <fontSize>0.0325</fontSize>
      <color>${colorBaseNeutralLight}</color>
    </menuTextSmall>

    <menuText name="menufooter">
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.0325</fontSize>
      <color>${colorGray}</color>
    </menuText>

    <menuIcons name="menuicons">
      <iconGames>./../assets/icons/menu/games.png</iconGames>
      <iconControllers>./../assets/icons/menu/controllers.png</iconControllers>
      <iconUI>./../assets/icons/menu/ui.png</iconUI>
      <iconAdvanced>./../assets/icons/menu/advanced.png</iconAdvanced>
      <iconSound>./../assets/icons/menu/sound.png</iconSound>
      <iconNetwork>./../assets/icons/menu/network.png</iconNetwork>
      <iconScraper>./../assets/icons/menu/scraper.png</iconScraper>
      <iconUpdates>./../assets/icons/menu/updates.png</iconUpdates>
      <iconSystem>./../assets/icons/menu/system.png</iconSystem>
      <iconQuit>./../assets/icons/menu/quit.png</iconQuit>
      <iconRestart>./../assets/icons/menu/restart.png</iconRestart>
      <iconShutdown>./../assets/icons/menu/shutdown.png</iconShutdown>
      <iconFastShutdown>./../assets/icons/menu/fastshutdown.png</iconFastShutdown>
      <iconKodi>./../assets/icons/menu/kodi.png</iconKodi>
    </menuIcons>
  </view>  


  <view name="system">


    <carousel name="systemcarousel">
      <origin>0 0</origin>
      <pos>-0.25 0</pos>
      <type>horizontal</type>
      <color>00000000</color>
      <size>1 1</size>
      <logoSize>0.35 0.425</logoSize>
      <logoScale>1</logoScale>
      <maxLogoCount>1</maxLogoCount>
      <logoAlignment>center</logoAlignment> 
    </carousel>

    <image name="background" extra="true">
         <origin>1 0.5</origin>
         <pos>1 0.5</pos>
         <maxSize>10 1</maxSize>
         <zIndex>7</zIndex>                 
         <path>./../assets/wall/${system.theme}.png</path>
         <path>./../assets/wall/${system.theme}.jpg</path>
    </image>       

    <text name="logoText">
      <size>0 0</size>
      <alignment>center</alignment>
      <scaleOrigin>0 0</scaleOrigin>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.05</fontSize>
      <color>${colorBase}</color>
    </text>

    <image name="logo">
      <path>./../assets/logos/${system.theme}.png</path>
      <path>./../assets/logos/${system.theme}.svg</path>
      <path>./../assets/logos/us/${system.theme}.png</path>
      <path>./../assets/logos/us/${system.theme}.svg</path>
      <path>./../assets/logos/${system.theme}-${lang}.png</path>
      <path>./../assets/logos/${system.theme}-${lang}.svg</path>
    </image>
  </view>


-----


</theme>
