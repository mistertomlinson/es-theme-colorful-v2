<theme>
<formatVersion>7</formatVersion>

  <subset name="device" displayName="Tools Screen">
    <include name="r36s" displayName="R36S">./../inc/r36snv.xml</include>
    <include name="g350" displayName="G350">./../inc/g350nv.xml</include>
    <include name="r36h" displayName="R36H">./../inc/r36hnv.xml</include>
    <include name="r36xx" displayName="R36XX">./../inc/r36xxnv.xml</include>
    <include name="r36splus" displayName="R36S Plus">./../inc/r36splusnv.xml</include>
  </subset>

<view name="detailed, basic">

    <image name="logo">
      <maxSize>0.35 0.425</maxSize>
      <origin>0.5 0.5</origin>
      <pos>0.25 0.5</pos>
      <horizontalAlignment>center</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <path>./../assets/logos/${system.theme}.png</path>
      <path>./../assets/logos/${system.theme}.svg</path>
      <path>./../assets/logos/us/${system.theme}.png</path>
      <path>./../assets/logos/us/${system.theme}.svg</path>
      <path>./../assets/logos/${system.theme}-${lang}.png</path>
      <path>./../assets/logos/${system.theme}-${lang}.svg</path>
      <zIndex>25</zIndex>
    </image>
</view>

</theme>