<?xml version="1.0"?>
<theme>
  <formatVersion>7</formatVersion>

<view name="detailed" extra="true">


    <image name="background" extra="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>1</zIndex>
         <path>./assets/gamelist_wall/${system.theme}.png</path>
         <path>./assets/gamelist_wall/${system.theme}.jpg</path>
    </image>

    <image name="gamelist_gradient" extra="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>4</zIndex>
         <path>./assets/gamelist_gradient/${system.theme}.png</path>
    </image>

    <image name="background_lines" extra="true" ifHelpPrompts="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>5</zIndex>
         <path>./assets/lines_wall/lines.png</path>
    </image>

    <image name="background_lines" extra="true" ifHelpPrompts="false">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0.025</pos>
      <zIndex>5</zIndex>
         <path>./assets/lines_wall/lines_false.png</path>
    </image>

    <image name="logo">
      <maxSize>0.2 0.10</maxSize>
      <origin>0.5 0.5</origin>
      <pos>0.145 0.095</pos>
      <horizontalAlignment>center</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <path>./assets/logos/${system.theme}.png</path>
      <path>./assets/logos/${system.theme}.svg</path>
      <path>./assets/logos/us/${system.theme}.png</path>
      <path>./assets/logos/us/${system.theme}.svg</path>
      <path>./assets/logos/${system.theme}-${lang}.png</path>
      <path>./assets/logos/${system.theme}-${lang}.svg</path>
    </image>

    <textlist name="gamelist" ifSubset="compatibility:pan4elec">
      <size>0.50 0.75</size>  <!--  <size>0.60 0.675</size> -->
      <origin>0 0</origin>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <alignment>left</alignment>
      <horizontalMargin>0.025</horizontalMargin>
      <lineSpacing>2</lineSpacing>
      <primaryColor>ffffff80</primaryColor>
      <secondaryColor>ffffff80</secondaryColor>
      <selectorColor>${selectorcolor}</selectorColor>
      <selectedColor>ffffff</selectedColor>
      <fadeScroll>true</fadeScroll>
      <scrollSound>${soundScroll}</scrollSound>
         <scrollbarColor>ffffff20</scrollbarColor>
         <scrollbarSize>0.003</scrollbarSize>
         <scrollbarCorner>0</scrollbarCorner>
         <scrollbarAlignment>left</scrollbarAlignment>
      <storyboard> 
         <animation property="y" from="1.5" begin="0" duration="450" mode="easeOut"/>           
         <animation event="activate" property="opacity" from="0" to="1" duration="500" mode="easeOut"/>
      </storyboard>
      <zIndex>3</zIndex>
    </textlist>
    
    <text name="md_description">
      <alignment>left</alignment>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.0275</fontSize>
      <color>ffffff80</color>
      <forceUppercase>false</forceUppercase>
      <lineSpacing>1.5</lineSpacing>
      <size>0.45 0.192</size>
      <origin>0.5 0</origin>
      <pos>0.74 0.73</pos>
    </text>


    <textlist name="gamelist" ifHelpPrompts="false">
      <size>0.445 0.95</size>
      <fontSize>0.03</fontSize>
      <pos>0.05 0.17</pos>
      <lineSpacing>3.3</lineSpacing>
