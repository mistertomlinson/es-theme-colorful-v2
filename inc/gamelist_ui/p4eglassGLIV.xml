    <image name="background_lines" extra="true" ifHelpPrompts="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>5</zIndex>
         <path>./../../assets/lines_wall/lines.png</path>
      <storyboard> 
         <animation property="y" from="1.5" begin="0" duration="450" mode="easeOut"/>           
         <animation event="activate" property="opacity" from="0" to="1" duration="500" mode="easeOut"/>
      </storyboard>
    </image>

    <image name="background_lines" extra="true" ifHelpPrompts="false">
      <size>1 1</size>
