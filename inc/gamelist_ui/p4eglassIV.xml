<?xml version="1.0"?>
<theme>
  <formatVersion>7</formatVersion>

<subset name="box_art_size" displayName="Description Size">
 <include name="dynamic_description" displayName="dynamic (experimental)"/>
 <include name="large" displayName="small"/>
 <include name="medium" displayName="medium"/>
 <include name="small" displayName="large"/>
</subset>


<view name="detailed" extra="true">

       <image name="bgFallback" extra="true">
       <pos>0 0</pos>
       <size>1 1</size>
       <zIndex>0</zIndex>
       <path>./../../assets/wall/${system.theme}.png</path>
       <path>./../../assets/wall/${system.theme}.jpg</path>
       </image>


    <image name="background" extra="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>1</zIndex>
         <path>./../../assets/gamelist_wall/${system.theme}.png</path>
         <path>./../../assets/gamelist_wall/${system.theme}.jpg</path>
    </image>

    <image name="gamelist_gradient" extra="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>10</zIndex>
         <path>./../../assets/gamelist_gradient/${system.theme}.png</path>
    </image>

    <image name="logo" ifHelpPrompts="false">
      <maxSize>0.45 0.10</maxSize>
      <origin>0.5 0.5</origin>
      <pos>0.25 0.098</pos>
      <horizontalAlignment>center</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <path>./../assets/logos/${system.theme}.png</path>
      <path>./../assets/logos/${system.theme}.svg</path>
      <path>./../assets/logos/us/${system.theme}.png</path>
      <path>./../assets/logos/us/${system.theme}.svg</path>
      <path>./../assets/logos/${system.theme}-${lang}.png</path>
      <path>./../assets/logos/${system.theme}-${lang}.svg</path>
    </image>

    <image name="logo" ifHelpPrompts="true">
      <maxSize>0.45 0.1</maxSize>
      <origin>0.5 0.5</origin>
      <pos>0.25 0.093</pos>
      <horizontalAlignment>center</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <path>./../assets/logos/${system.theme}.png</path>
      <path>./../assets/logos/${system.theme}.svg</path>
      <path>./../assets/logos/us/${system.theme}.png</path>
      <path>./../assets/logos/us/${system.theme}.svg</path>
      <path>./../assets/logos/${system.theme}-${lang}.png</path>
      <path>./../assets/logos/${system.theme}-${lang}.svg</path>
    </image>

    <textlist name="gamelist" ifSubset="compatibility:pan4elec">
      <size>0.50 0.75</size>  <!--  <size>0.60 0.675</size> -->
      <origin>0 0</origin>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <alignment>left</alignment>
      <lineSpacing>2</lineSpacing>
      <primaryColor>ffffff80</primaryColor>
      <secondaryColor>ffffff80</secondaryColor>
      <selectorColor>${selectorcolor}</selectorColor>
      <selectedColor>ffffff</selectedColor>
      <fadeScroll>true</fadeScroll>
      <scrollSound>${soundScroll}</scrollSound>
         <scrollbarColor>000000</scrollbarColor>
         <scrollbarSize>0.015</scrollbarSize>
         <scrollbarCorner>0.5</scrollbarCorner>
         <scrollbarAlignment>left</scrollbarAlignment>
      <storyboard> 
         <animation property="y" from="1.5" begin="0" duration="450" mode="easeOut"/>           
         <animation event="activate" property="opacity" from="0" to="1" duration="500" mode="easeOut"/>
      </storyboard>
      <zIndex>3</zIndex>
    </textlist>


    <textlist name="gamelist" ifHelpPrompts="false">
      <size>0.47 0.79</size>
      <fontSize>0.035</fontSize>
      <pos>-0.008 0.18</pos>
      <horizontalMargin>0.03</horizontalMargin>
      <lineSpacing>1.385</lineSpacing>
    </textlist>

    <textlist name="gamelist" ifHelpPrompts="true">
      <size>0.47 0.729</size>
      <fontSize>0.036</fontSize>
      <pos>-0.008 0.17</pos>
      <horizontalMargin>0.03</horizontalMargin>
      <lineSpacing>1.385</lineSpacing>
         <autoScroll>horizontal</autoScroll>
    </textlist>
  </view>




  <view name="detailed">

<image name="box_art_border" extra="true">
      <maxSize>0.46 0.568</maxSize>
      <origin>0.5 .5</origin>
      <pos>0.645 0.51</pos>
      <zIndex>20</zIndex>
      <path>./../../inc/images/backdrop.png</path>
</image>

    <video ifSubset="box_art_size:small" name="md_video">
      <path>{game:video}</path>
      <maxSize>0.44 0.548</maxSize>
      <origin>0.5 .5</origin>
      <pos>0.645 0.51</pos>
      <delay>2</delay>
      <effect>none</effect>
      <loop>true</loop>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <zIndex>18</zIndex>
  </video>

    <video ifSubset="box_art_size:medium" name="md_video">
      <path>{game:video}</path>
      <maxSize>0.44 0.548</maxSize>
      <origin>0.5 .5</origin>
      <pos>0.645 0.51</pos>
      <delay>2</delay>
      <effect>none</effect>
      <loop>true</loop>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <zIndex>18</zIndex>
  </video>

    <video ifSubset="box_art_size:large" name="md_video">
      <path>{game:video}</path>
      <maxSize>0.44 0.548</maxSize>
      <origin>0.5 .5</origin>
      <pos>0.645 0.51</pos>
      <delay>2</delay>
      <effect>none</effect>
      <loop>true</loop>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <zIndex>18</zIndex>
  </video>

    <video ifSubset="box_art_size:dynamic_description" name="md_video" extra="true">
      <path>{game:video}</path>
      <maxSize>0.44 0.548</maxSize>
      <origin>0.5 .5</origin>
      <pos>0.645 0.51</pos>
      <delay>2</delay>
      <effect>none</effect>
      <loop>true</loop>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <zIndex>18</zIndex>
  </video>

  </view>


