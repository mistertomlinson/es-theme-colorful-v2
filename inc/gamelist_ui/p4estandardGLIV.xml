<?xml version="1.0"?>
<theme>
  <formatVersion>7</formatVersion>

  <view name="detailed" extra="true">

<image name="box_art_border" extra="true">
      <maxSize>0.46 0.568</maxSize>
      <origin>0.5 .5</origin>
      <pos>0.75 0.51</pos>
      <zIndex>20</zIndex>
      <path>./../../inc/images/backdrop.png</path>
</image>

    <image name="background" extra="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <zIndex>1</zIndex>
      <path>${imageBlank}</path>
      <color>${backcolor}</color>
    </image>

    <image name="gamelist_background" extra="true">
      <size>0.5 1</size>
      <origin>0.5 0</origin>
      <pos>0.25 0.0</pos>
      <zIndex>5</zIndex>
      <path>${imageBlank}</path>
      <color>313536</color> <!-- Dark grey -->
    </image>

    <image name="logo">
      <maxSize>0.45 0.10</maxSize>
      <origin>0.5 0.5</origin>
      <pos>0.25 0.095</pos>
      <horizontalAlignment>center</horizontalAlignment>
      <verticalAlignment>center</verticalAlignment>
      <path>./../assets/logos/${system.theme}.png</path>
      <path>./../assets/logos/${system.theme}.svg</path>
      <path>./../assets/logos/us/${system.theme}.png</path>
      <path>./../assets/logos/us/${system.theme}.svg</path>
      <path>./../assets/logos/${system.theme}-${lang}.png</path>
      <path>./../assets/logos/${system.theme}-${lang}.svg</path>
    </image>

    <textlist name="gamelist">
      <size>0.50 0.75</size>  <!--  <size>0.60 0.675</size> -->
      <origin>0 0</origin>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <alignment>left</alignment>
      <horizontalMargin>0.015</horizontalMargin>
      <lineSpacing>1.385</lineSpacing>
      <primaryColor>${colorWhite}</primaryColor>
      <secondaryColor>${colorWhite}</secondaryColor>
      <selectorColor>${selectorcolor}</selectorColor>
      <selectedColor>${selectedcolor}</selectedColor>
      <scrollSound>${soundScroll}</scrollSound>
         <scrollbarColor>${gameListScrollbarColor}</scrollbarColor>
         <scrollbarSize>0.015</scrollbarSize>
         <scrollbarCorner>.5</scrollbarCorner>
         <scrollbarAlignment>outer right</scrollbarAlignment>
      <storyboard> 
         <animation property="y" from="1.5" begin="0" duration="450" mode="easeOut"/>           
         <animation event="activate" property="opacity" from="0" to="1" duration="500" mode="easeOut"/>
      </storyboard>
    </textlist>

      <image name="gamelist-mask" extra="true">
         <path>${imageBlank}</path>
         <origin>1 0</origin>
         <pos>0.5 0</pos>
         <size>0.1 1</size>
         <tile>true</tile>
         <gradientType>horizontal</gradientType>
         <color>31353600</color>
         <colorEnd>313536</colorEnd>
         <zIndex>20</zIndex>
      </image>
    
    <text name="md_description">
      <alignment>left</alignment>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.0275</fontSize>
      <color>${colorWhite}</color>
      <forceUppercase>false</forceUppercase>
      <lineSpacing>1.1</lineSpacing>
      <size>0.45 0.192</size>
      <origin>0.5 0</origin>
      <pos>0.74 0.73</pos>
    </text>


    <textlist name="gamelist" ifHelpPrompts="false">
      <size>0.50 0.79</size>
      <fontSize>0.035</fontSize>
      <pos>0 0.1925</pos>
    </textlist>
     <text name="md_description" ifHelpPrompts="false">
      <alignment>left</alignment>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.0275</fontSize>
      <color>${colorWhite}</color>
      <forceUppercase>false</forceUppercase>
      <lineSpacing>1.1</lineSpacing>
      <size>0.45 0.205</size>
      <origin>0.5 0</origin>
      <pos>0.75 0.766</pos>
    </text>

    <textlist name="gamelist" ifHelpPrompts="true">
      <size>0.50 0.729</size>
      <fontSize>0.036</fontSize>
      <pos>0 0.175</pos>
    </textlist>
     <text name="md_description" ifHelpPrompts="true">
      <alignment>left</alignment>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.0275</fontSize>
      <color>${colorWhite}</color>
      <forceUppercase>false</forceUppercase>
      <lineSpacing>1</lineSpacing>
      <size>0.45 0.15</size>
      <origin>0.5 0</origin>
      <pos>0.75 0.766</pos>
    </text>
  </view>

  <view name="detailed">
    <video name="md_video">
      <path>{game:video}</path>
      <maxSize>0.445 0.548</maxSize>
      <origin>0.5 .5</origin>
      <pos>0.75 0.51</pos>
      <delay>2</delay>
      <effect>none</effect>
      <loop>true</loop>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <zIndex>18</zIndex>
  </video>
  </view>

