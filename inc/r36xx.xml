    <textlist name="gamelist">
      <size>0.50 0.75</size>
      <origin>0 0</origin>
      <pos>0.495 0.13</pos>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.035</fontSize>
      <alignment>right</alignment>
      <horizontalMargin>0.015</horizontalMargin>
      <lineSpacing>1.385</lineSpacing>
      <primaryColor>ffffff80</primaryColor>
      <secondaryColor>ffffff80</secondaryColor>
      <selectorColor>${selectorcolor}</selectorColor>
      <selectedColor>ffffff</selectedColor>
      <scrollSound>${soundScroll}</scrollSound>
      <zIndex>24</zIndex>
    </textlist>

    <helpsystem name="help">
      <origin>0 0</origin>
      <pos>1 0.95</pos>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.025</fontSize>
      <textColor>${colorWhite}</textColor>
      <iconColor>${colorWhite}</iconColor>
      <zIndex>1</zIndex>
    </helpsystem>

    <image name="help-overlay2" ifHelpPrompts="true" extra="true">
      <size>1 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <path>./../help-overlay2.png</path>
      <visible>false</visible>
    </image>

