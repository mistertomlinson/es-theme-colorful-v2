<theme>
  <formatVersion>7</formatVersion>   

  <subset name="compatibility" displayName="OS Compatibility">
    <include name="arkos" displayName="ArkOS">./inc/helpbar/arkoshelp.xml</include>
    <include name="pan4elec" displayName="Pan4ELEC">./inc/helpbar/pan4elechelp.xml</include>
  </subset>

  <view name="system, menu" ifSubset="compatibility:pan4elec">
    <text name="systemInfo">     
      <pos>0.017 0.004</pos>
      <color>ffffff</color>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.03</fontSize>
      <alignment>left</alignment>
      <zIndex>6</zIndex>     
    </text> 
</view>

  <view name="system, menu" ifSubset="compatibility:arkos">
    <text name="systemInfo">     
      <pos>0.015 0.00</pos>
      <color>ffffff</color>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.03</fontSize>
      <alignment>left</alignment>
      <zIndex>6</zIndex>     
    </text> 
  </view>

</theme>