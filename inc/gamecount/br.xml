    <include name="pan4elec" displayName="Pan4ELEC">./inc/helpbar/pan4elechelp.xml</include>
  </subset>  
 

  <view name="system, menu" ifSubset="compatibility:pan4elec">
    <text name="systemInfo">     
      <pos>-0.021 0.93</pos>
      <color>ffffff</color>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.03</fontSize>
      <alignment>right</alignment>
      <zIndex>6</zIndex>     
    </text> 
</view>

  <view name="system, menu" ifSubset="compatibility:arkos">
    <text name="systemInfo">     
      <pos>-0.02 0.926</pos>
      <color>ffffff</color>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.03</fontSize>
      <alignment>right</alignment>
      <zIndex>6</zIndex>     
    </text> 
