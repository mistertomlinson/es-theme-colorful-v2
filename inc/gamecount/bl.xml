<theme>
  <formatVersion>7</formatVersion>   

  <subset name="compatibility" displayName="OS Compatibility">
    <include name="arkos" displayName="ArkOS">./inc/helpbar/arkoshelp.xml</include>
    <include name="pan4elec" displayName="Pan4ELEC">./inc/helpbar/pan4elechelp.xml</include>
  </subset>


  <view name="system, menu">
    <text name="systemInfo" ifSubset="compatibility:pan4elec">     
      <pos>-0.25 0.62</pos>
      <color>ffffff</color>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.03</fontSize>
      <alignment>center</alignment>
      <zIndex>6</zIndex>     
    </text> 
</view>

  <view name="system, menu">
    <text name="systemInfo" ifSubset="compatibility:arkos">     
      <pos>-0.25 0.6</pos>
      <color>ffffff</color>
      <fontPath>./../assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontPath>./assets/fonts/RobotoCondensed-Regular.ttf</fontPath>
      <fontSize>0.03</fontSize>
      <alignment>center</alignment>
      <zIndex>6</zIndex>     
    </text> 
</view>

</theme>